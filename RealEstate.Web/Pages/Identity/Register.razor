@page "/register"
@layout HeadlessLayout

<PageTitle>Entrar</PageTitle>

<MudGrid Justify="Justify.Center">
    <MudItem xs="12" sm="12" md="8" lg="6" xl="6" xxl="6">
        <MudPaper Class="mud-width-full pa-8">
            <div class="d-flex justify-center pb-8 pt-8">
                <MudImage Src="imgs/logo.png" Width="200"/>
            </div>
            
            <MudForm @ref="_mudForm">
                <MudTextField T="string" Label="E-mail" Placeholder="exemplo@email.com" Required="true" InputType="InputType.Email" RequiredError="Obrigatório informar um e-mail"/>
                <MudTextField T="string" Label="Senha" Placeholder="123456" Required="true" InputType="InputType.Password" RequiredError="Obrigatorio informar uma senha"></MudTextField>
            </MudForm>
            
            <div class="d-flex mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary">Cadastrar</MudButton>
                <MudSpacer/>
                <MudButton Href="/login" Variant="Variant.Filled" Color="Color.Default">Já tenho uma conta</MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {

    MudForm? _mudForm;

}