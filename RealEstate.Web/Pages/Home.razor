@page "/"

<MudGrid Justify="Justify.Center">
    <MudItem lg="6" md="12">
        <MudCard Class="pa-4">
            <MudCardHeader Class="d-flex align-center justify-center">
                <MudText Typo="Typo.h6">Propriedades por Status</MudText>
            </MudCardHeader>
            <MudCardContent Class="d-flex align-center justify-center">
                <GetPropertiesByStatusChart />
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem lg="6" md="12">
        <MudCard Class="pa-8">
            <MudCardHeader Class="d-flex align-center justify-center">
                <MudText Typo="Typo.h6">Benchmark de Imóveis</MudText>
            </MudCardHeader>
            <MudCardContent Class="d-flex align-center justify-center">
                <MudProgressCircular Indeterminate="true" Color="Color.Primary" />
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>